{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "typedocOptions": {
        "out": "docs",
        "excludeExternals": true,
        "excludePrivate": true,
        "externalPattern": "**/node_modules/**",
        "exclude": [
            "**/node_modules/**",
            "**/*.test.ts"
        ],
        "categoryOrder": [
            "Entrypoint",
            "*"
        ]
    }
}
